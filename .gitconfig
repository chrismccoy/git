[alias]
	lockdown = "!gh repo edit \"$@\" --enable-issues=false --enable-wiki=false --enable-projects=false"
	release = "!f() { tag=\"$1\"; title=\"$2\"; shift 2; gh release create \"$tag\" -t \"$title\" \"$@\"; }; f"
	release-archive = "!f() { archive_name=\"${PWD##*/}.zip\"; echo \"Creating archive: $archive_name\"; git archive -o \"$archive_name\" HEAD && gh release create \"$1\" --target $(git rev-parse HEAD) -t \"$2\" \"$archive_name\" && rm \"$archive_name\"; }; f"
	rpc = "!f() { if [ -n \"$1\" ]; then gh repo create \"$@\" --disable-issues --disable-wiki && gh repo edit \"$1\" --enable-projects=false; else repo_name=$(basename \"$PWD\"); gh repo create \"$repo_name\" --disable-issues --disable-wiki && gh repo edit \"$repo_name\" --enable-projects=false; fi; }; f"
	zip = "!git archive -o \"${PWD##*/}.zip\" HEAD"
	hist = "!git log --oneline --decorate | tac | nl | tac | sed 's/([^)]*)\\s//g'"
	tp = "!git tag -a \"$1\" -m \"$2\" && git push origin \"$1\""
	publish = "!f() { if [ ! -d .git ]; then git init; fi; git add .; git commit -m \"$1\"; gh repo create \"${PWD##*/}\" --source=. --push; }; f"
	public = "!gh repo edit --visibility public --accept-visibility-change-consequences"
	private = "!gh repo edit --visibility private --accept-visibility-change-consequences"
	wipe-history = !f() { git reset --soft $(git rev-list --max-parents=0 HEAD) && git commit --amend -m "${1:-Initial commit}" && git push --force; }; f
